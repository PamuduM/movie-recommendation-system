{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Backend Dependencies",
			"type": "shell",
			"command": "npm install",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "npm install",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "npm run start",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting.*",
					"endsPattern": "^.*Server.*running.*|^.*listening.*"
				}
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "backend"
			}
		},
		{
			"label": "Start Backend Server (Dev Mode)",
			"type": "shell",
			"command": "npm run dev",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting.*",
					"endsPattern": "^.*Server.*running.*|^.*listening.*"
				}
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "backend"
			}
		},
		{
			"label": "Start Frontend (Expo)",
			"type": "shell",
			"command": "npm start",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting.*",
					"endsPattern": "^.*Metro.*waiting.*|^.*Logs.*your.*app.*"
				}
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "frontend"
			}
		},
		{
			"label": "Start Frontend (Android)",
			"type": "shell",
			"command": "npm run android",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting.*",
					"endsPattern": "^.*Metro.*waiting.*|^.*Logs.*your.*app.*"
				}
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "frontend"
			}
		},
		{
			"label": "Install All Dependencies",
			"dependsOn": [
				"Install Backend Dependencies",
				"Install Frontend Dependencies"
			],
			"dependsOrder": "parallel",
			"group": "build"
		},
		{
			"label": "Run Full Stack (Backend + Frontend)",
			"dependsOn": [
				"Start Backend Server",
				"Start Frontend (Expo)"
			],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			}
		}
	]
}